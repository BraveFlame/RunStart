<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <FrameLayout
            android:id="@+id/goChattingList"
            android:layout_width="45dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/ic_xiaoxi"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/msgCount"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/my_textview"
                android:textSize="8sp"
                android:text="99+"
                android:visibility="gone"
                android:textColor="#ffffff"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/fbuttonRadioGroup"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="10">
                <RadioButton
                    android:id="@+id/friends"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Friends"
                    android:button="@null"
                    android:textSize="18sp"
                    android:textColor="#acacac"
                    android:gravity="center"/>
                <RadioButton
                    android:id="@+id/group"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Group"
                    android:button="@null"
                    android:textSize="18sp"
                    android:textColor="#acacac"
                    android:gravity="center"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/fbuttonRadioGroup1"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/friends1"
                    android:layout_height="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_checked_state"
                    android:gravity="center"/>
                <RadioButton
                    android:id="@+id/group1"
                    android:layout_height="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_checked_state"
                    android:gravity="center"/>
            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/menuButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_tangchuang"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/viewPager"
        android:layout_weight="150">
    </android.support.v4.view.ViewPager>
</LinearLayout>
