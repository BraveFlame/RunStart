<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--setname的标题栏-->
    <RelativeLayout
        android:id="@+id/mine_personalinformation_setname_rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffff"
        >
        <ImageView
            android:id="@+id/mine_personalinformation_setname_iv_zuojiantou"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            style="?android:attr/borderlessButtonStyle"

            android:src="@mipmap/ic_zuojiantou"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:text="Edit Name"
            android:textSize="18sp"
            android:textColor="#212121"
            />
    </RelativeLayout>
    <!--第一条分割线-->
    <View
        android:id="@+id/mine_personalinformation_setname_line_first"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/mine_personalinformation_setname_rl_title"
        />
    <RelativeLayout
        android:id="@+id/mine_personalinformation_setname_rl_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_personalinformation_setname_line_first"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffff"
        >
        <EditText
            android:id="@+id/mine_personalinformation_setname_et_setname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:background="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="25"
            android:hint="set your name"
            android:textSize="18sp"
            android:textColor="#212121"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_personalinformation_setname_rl_first"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"

        android:text="Pick a name easy to remember."
        android:textSize="18sp"
        />
</RelativeLayout>