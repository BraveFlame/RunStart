<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".slidingpage.LoginPageActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <Button
            android:id="@+id/goBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_fanghui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:text="Log in"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/logo"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:src="@mipmap/logo"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_toRightOf="@id/logo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:gravity="bottom"
            android:text="LOVE SPORTS"
            android:textSize="20dp"
            android:textColor="#21187f"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/phoneImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_shouji"/>
            <EditText
                android:text="18202727686"
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="match_parent"
                android:hint="Please enter your mobile number"
                android:textColor="#21187f"
                android:textSize="16dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/passwordImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_mima2"/>
            <EditText
                android:id="@+id/password"
                android:text="66999"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="match_parent"
                android:hint="Please enter your password"
                android:textColor="#21187f"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:inputType="textPassword" />
        </LinearLayout>
        <ToggleButton
            android:id="@+id/showPassword"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="300dp"
            android:textOff=""
            android:textOn=""
            android:background="@mipmap/ic_eye1"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/forgetPassword"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:text="forget password?"
        android:textSize="16dp"
        android:textColor="#acacac"/>
    <Button
        android:id="@+id/login"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#21187f"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#ffffff" />
</LinearLayout>