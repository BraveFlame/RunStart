<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f1"
    android:orientation="vertical">

    <!--第一条分割线-->
    <View
        android:id="@+id/mine_setup_content_line_first"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:background="#f0f1f1"
        />
    <!--第一部分-->
    <RelativeLayout
        android:id="@+id/mine_setup_content_rl_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_setup_content_line_first"

        android:background="#ffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"

            android:text="Related Us"
            android:textSize="18sp"
            android:textColor="#212121"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"

            android:src="@mipmap/ic_youjiantou"
            />
    </RelativeLayout>
    <!--第二条分割线-->
    <View
        android:id="@+id/mine_setup_content_line_second"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/mine_setup_content_rl_first"

        android:background="#f0f1f1"
        />
    <!--第二部分-->
    <RelativeLayout
        android:id="@+id/mine_setup_content_rl_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_setup_content_line_second"

        android:background="#ffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"

            android:text="Feedback"
            android:textSize="18sp"
            android:textColor="#212121"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"

            android:src="@mipmap/ic_youjiantou"
            />
    </RelativeLayout>
    <!--第三条条分割线-->
    <View
        android:id="@+id/mine_setup_content_line_three"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/mine_setup_content_rl_second"

        android:background="#f0f1f1"
        />
    <!--第三部分-->
    <RelativeLayout
        android:id="@+id/mine_setup_content_rl_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_setup_content_line_three"

        android:background="#ffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"

            android:text="Give me praise"
            android:textSize="18sp"
            android:textColor="#212121"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"

            android:src="@mipmap/ic_youjiantou"
            />
    </RelativeLayout>
    <!--第四条分割线-->
    <View
        android:id="@+id/mine_setup_content_line_four"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/mine_setup_content_rl_three"

        android:background="#f0f1f1"
        />
    <!--第四部分-->
    <RelativeLayout
        android:id="@+id/mine_setup_content_rl_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_setup_content_line_four"

        android:background="#ffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"

            android:text="About us"
            android:textSize="18sp"
            android:textColor="#212121"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"

            android:src="@mipmap/ic_youjiantou"
            />
    </RelativeLayout>
    <!--第五部分 log out-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/mine_setup_content_btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:text="Log out"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#21187f"
            android:background="@drawable/mine_addexdiary_btn_selector"
            />
    </LinearLayout>
</RelativeLayout>