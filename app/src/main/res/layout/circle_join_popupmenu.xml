<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f0f0"
    android:orientation="vertical">
    <!--new Activity-->
    <RelativeLayout
        android:id="@+id/circle_join_popupmenu_rl_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/circle_join_iv_popup_fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_fabu" />
        <TextView
            android:id="@+id/circle_join_tv_popup_newactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_join_iv_popup_fabu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="New activity"
            android:textSize="16sp"
            />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/circle_join_tv_popup_newactivity"
            android:layout_alignLeft="@+id/circle_join_tv_popup_newactivity"
            android:background="#e0e0e0" />
    </RelativeLayout>
    <!--invite friends-->
    <RelativeLayout
        android:id="@+id/circle_join_popupmenu_rl_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/circle_join_iv_popup_fenxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_fenxian" />
        <TextView
            android:id="@+id/circle_tv_popup_invitefriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_join_iv_popup_fenxian"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="invite friends"
            android:textSize="16sp"
            />
    </RelativeLayout>
</LinearLayout>