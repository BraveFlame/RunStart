<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    >
    <!--第一部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"

            android:text="invite friends"
            android:textSize="18sp"
            android:textColor="#212121"
            />
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="#f1f0f0"/>


    </LinearLayout>
    <!--第二部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/circle_join_menu_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="35dp"

            android:drawableTop="@mipmap/ic_g"
            android:drawablePadding="15dp"
            android:text="Google"
            android:textSize="18sp"
            android:textColor="#212121"
            />

        <TextView
            android:id="@+id/circle_join_menu_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:drawableTop="@mipmap/ic_f"
            android:drawablePadding="15dp"
            android:text="Facebook"
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/circle_join_menu_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="35dp"
            android:layout_alignParentRight="true"

            android:drawableTop="@mipmap/ic_t"
            android:drawablePadding="15dp"
            android:text="Twitter"
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_alignBaseline="@+id/circle_join_menu_facebook"
            android:layout_alignBottom="@+id/circle_join_menu_facebook"
           />
    </RelativeLayout>
</LinearLayout>