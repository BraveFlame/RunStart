<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:orientation="vertical">
    <!--new Activity-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rr_pushcard_popupmenu_new_activity"
        >

        <ImageView
            android:id="@+id/circle_iv_popup_fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:src="@mipmap/ic_fabu" />

        <TextView
            android:id="@+id/circle_tv_popup_newactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_iv_popup_fabu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:text="New activity"
            android:textSize="16sp"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/circle_tv_popup_newactivity"
            android:layout_alignLeft="@+id/circle_tv_popup_newactivity"

            android:background="#e0e0e0" />
    </RelativeLayout>
    <!--Exit Activity-->
    <RelativeLayout
        android:id="@+id/rr_pushcard_popupmenu_exit_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/circle_iv_popup_tuichu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:src="@mipmap/ic_tuichu" />

        <TextView
            android:id="@+id/circle_tv_popup_exitactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_iv_popup_tuichu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:text="Exit activity"
            android:textSize="16sp"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/circle_tv_popup_exitactivity"
            android:layout_alignLeft="@+id/circle_tv_popup_exitactivity"

            android:background="#e0e0e0" />
    </RelativeLayout>
    <!--News-->
    <RelativeLayout
        android:id="@+id/rr_pushcard_popupmenu_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/circle_iv_popup_xiaoxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:src="@mipmap/ic_xiaoxi" />

        <TextView
            android:id="@+id/circle_tv_popup_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_iv_popup_xiaoxi"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:text="news"
            android:textSize="16sp"
            />
    </RelativeLayout>

</LinearLayout>