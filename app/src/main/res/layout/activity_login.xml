<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <Button
            android:id="@+id/goBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_fanghui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:text="Log in"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/logo"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo" />
        <TextView
            android:layout_toRightOf="@id/logo"
            android:layout_alignBottom="@+id/logo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="RHYTHM IN LIFE"
            android:textSize="16sp"
            android:textColor="#21187f"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="290dp"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/phoneImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_shouji"/>
            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="match_parent"
                android:hint="Cellphone Number"
                android:textColor="#21187f"
                android:textSize="18sp"
                android:focusable="true"
                android:text="18202727686"
                android:focusableInTouchMode="true"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/passwordImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_mima2"/>
            <EditText
                android:id="@+id/password"
                android:text="66999"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="match_parent"
                android:hint="Password"
                android:textColor="#21187f"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"/>
        </LinearLayout>
        <ToggleButton
            android:id="@+id/showPassword"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textOff=""
            android:textOn=""
            android:background="@mipmap/ic_eye1"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/forgetPassword"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:text="forget password?"
        android:textSize="14sp"
        android:textColor="#acacac"/>
    <Button
        android:id="@+id/login"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#21187f"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/my_search_border" />
</LinearLayout>