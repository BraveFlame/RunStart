<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f1f1"
    android:id="@+id/mainScrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <EditText
                android:id="@+id/search_edit_input"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/ic_shousu"
                android:paddingLeft="6dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="5dp"
                android:layout_margin="15dp"
                android:background="@drawable/my_search_border"
                android:textSize="16sp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="Search group"/>
            <ImageView
                android:id="@+id/search_iv_delete"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:src="@mipmap/sha"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <com.runstart.friend.adapter.ListViewForScrollView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="gone"
            android:id="@+id/search_lv_tips"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">
        </com.runstart.friend.adapter.ListViewForScrollView>

        <LinearLayout
            android:id="@+id/default_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recommendedGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="Recommended group"
                    android:textColor="#000000"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/moreRecommendedGroup"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:text="More"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:background="@null"
                    android:drawableRight="@mipmap/ic_gochatting"
                    android:gravity="center"/>
            </LinearLayout>
            <com.runstart.friend.adapter.ListViewForScrollView
                android:id="@+id/recommendedGroupListView"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:dividerHeight="2dp"
                android:divider="#f2f1f1">
            </com.runstart.friend.adapter.ListViewForScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/myGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="6dp"
                    android:text="My group"
                    android:textColor="#000000"
                    android:textSize="18sp"/>
            </LinearLayout>

            <com.runstart.friend.adapter.ListViewForScrollView
                android:id="@+id/myGroupListView"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:dividerHeight="2dp"
                android:divider="#f2f1f1">
            </com.runstart.friend.adapter.ListViewForScrollView>
            <com.runstart.friend.adapter.ListViewForScrollView
                android:id="@+id/joinedGroupListView"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:dividerHeight="2dp"
                android:divider="#f2f1f1">
            </com.runstart.friend.adapter.ListViewForScrollView>
            <RelativeLayout
                android:id="@+id/zero_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@mipmap/kongzhuangtai"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:text="I have not joined any group yet"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#b2a2bf"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
