<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f1f1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/headerImageRect"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@mipmap/ian_dooley_298769"
                android:scaleType="centerCrop"/>
            <com.runstart.friend.friendactivity.MyHeaderImageView
                android:id="@+id/headerImageCircle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ian_dooley_298769"
                app:civ_border_color="#f2f1f1"
                app:civ_border_width="8dp"
                app:civ_fill_color="#ffffff"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="170dp"
                android:paddingRight="20dp">
                <TextView
                    android:layout_marginLeft="110dp"
                    android:id="@+id/NickName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="NickName"
                    android:textSize="18sp"
                    android:textColor="#21187f"/>
                <TextView
                    android:id="@+id/likeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="112"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/likeImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@id/likeNumber"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/ic_zan"/>
            </RelativeLayout>

            <RadioGroup
                android:layout_marginTop="215dp"
                android:id="@+id/buttonRadioGroup"
                android:layout_width="243dp"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:background="#88e1e1e1">
                <RadioButton
                    android:id="@+id/all"
                    android:layout_height="32dp"
                    android:layout_width="60dp"
                    android:text="All"
                    android:textColor="#21187f"
                    android:button="@null"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#ffffff"/>
                <RadioButton
                    android:layout_marginLeft="1dp"
                    android:id="@+id/walk"
                    android:layout_height="32dp"
                    android:layout_width="60dp"
                    android:text="Walk"
                    android:textColor="#878787"
                    android:button="@null"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#ffffff"/>
                <RadioButton
                    android:layout_marginLeft="1dp"
                    android:id="@+id/run"
                    android:layout_height="32dp"
                    android:layout_width="60dp"
                    android:text="Run"
                    android:textColor="#878787"
                    android:button="@null"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#ffffff"/>
                <RadioButton
                    android:layout_marginLeft="1dp"
                    android:id="@+id/ride"
                    android:layout_height="32dp"
                    android:layout_width="60dp"
                    android:text="Ride"
                    android:textColor="#878787"
                    android:button="@null"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#ffffff" />
            </RadioGroup>
            <TextView
                android:layout_marginTop="251dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1"/>
            <LinearLayout
                android:id="@+id/goChatting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="252dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#ffffff">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_xiaoxi"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Message"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp">
                    <ImageView
                        android:id="@+id/goChattingimage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_gochatting"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/msgCount"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/goChattingimage"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:background="@drawable/my_textview"
                        android:text="99+"
                        android:textSize="10sp"
                        android:textColor="#ffffff"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="297dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1"/>
            <TextView
                android:layout_marginTop="302dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="303dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The amount of movement today"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/sportLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2222m"
                    android:textSize="20sp"
                    android:textColor="#c562ff"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="355dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1"/>
            <TextView
                android:layout_marginTop="360dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="361dp"
                android:background="#ffffff">
                <TableRow>
                    <ImageView android:src="@mipmap/ic_pinjuzi2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"/>
                    <ImageView android:src="@mipmap/ic_daojishi"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"/>
                    <ImageView android:src="@mipmap/ic_kaluli"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/averageSpeed"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="22 km/h"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/timeCost"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="22:22:22"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/kCal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="100.45"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Average speed"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Time cost"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Kcal"
                        android:textSize="12sp"/>
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_marginTop="431dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="440dp"
                android:text="Activity"
                android:textSize="18sp"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/activity"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginTop="470dp"
                android:scaleType="fitXY"
                android:src="@mipmap/yingdaoye1"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/addFriend"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="@drawable/my_button"/>
    </LinearLayout>
</FrameLayout>
