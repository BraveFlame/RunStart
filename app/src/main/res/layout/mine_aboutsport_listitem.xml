<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="#ffff"
    >
    <!--第一条分割线-->
    <View
        android:id="@+id/mine_aboutsport_listitem_line_first"
        android:layout_width="match_parent"
        android:layout_height="8dp"

        android:background="#f1f0f0"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_aboutsport_listitem_line_first"
        >
        <ImageView
            android:id="@+id/mine_aboutsport_listitem_iv_newsImage"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:src="@mipmap/annie_spratt_1338721"
            />
        <TextView
            android:id="@+id/mine_aboutsport_listitem_tv_newstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mine_aboutsport_listitem_iv_newsImage"
            android:layout_alignTop="@+id/mine_aboutsport_listitem_iv_newsImage"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"

            android:hint="Please the news title"

            android:textSize="18sp"
            android:textColor="#212121"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/mine_aboutsport_listitem_tv_newscontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@+id/mine_aboutsport_listitem_iv_newsImage"
            android:layout_toRightOf="@+id/mine_aboutsport_listitem_iv_newsImage"

            android:maxLines="1"
            android:ellipsize="end"
            android:hint="Please input the news content"

            android:textSize="16sp"
            android:textColor="#757575"
            />
        <ImageView
            android:id="@+id/mine_aboutsport_listitem_iv_watchImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"

            android:src="@mipmap/ic_guankanrenshu"
            />
        <TextView
            android:id="@+id/mine_aboutsport_listitem_tv_watchsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
           android:paddingBottom="5dp"
           android:paddingTop="5dp"

            android:text="4577"
            android:textSize="16sp"
            android:textColor="#878787"
            />
    </RelativeLayout>

</RelativeLayout>