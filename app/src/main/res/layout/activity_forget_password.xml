<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <Button
            android:id="@+id/goBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_fanghui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:text="Forget password"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="160dp"
        android:layout_width="290dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="130dp">
        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/phoneImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_shouji"/>
            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="match_parent"
                android:hint="Cellphone Number"
                android:textColor="#21187f"
                android:textSize="18sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="43dp"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/confirmationCode"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="match_parent"
                android:hint="Verification Code"
                android:textColor="#21187f"
                android:textSize="18sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"/>
        </LinearLayout>
        <Button
            android:id="@+id/getConfirmationCode"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="Obtain"
            android:textAllCaps="false"
            android:background="@null"
            android:textColor="#21187f"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/passwordImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_mima2"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="match_parent"
                android:hint="New Password"
                android:textColor="#21187f"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:inputType="textPassword" />
        </LinearLayout>
        <ToggleButton
            android:id="@+id/showPassword"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="93dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textOff=""
            android:textOn=""
            android:background="@mipmap/ic_eye1"/>
    </RelativeLayout>
    <Button
        android:id="@+id/determine"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Determine"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#21187f"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/my_search_border" />
</LinearLayout>
