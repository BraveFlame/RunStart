<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/chat_time_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2017-05-12 15:20"
        android:layout_marginBottom="5dp"/>

    <RelativeLayout
        android:id="@+id/chat_left_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
       >

        <EditText
            android:id="@+id/chat_left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/chat_left"
            android:editable="false"
            android:text="a"
            android:textCursorDrawable="@null"
            android:textIsSelectable="true" />

        <ImageView
            android:id="@+id/chat_left_img"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@drawable/chat_left"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_right_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >

        <EditText
            android:id="@+id/chat_right_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/chat_right_me"
            android:editable="false"
            android:text="s"
            android:textCursorDrawable="@null"
            android:textIsSelectable="true" />

        <ImageView
            android:id="@+id/chat_right_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_width="120dp"
            android:background="@drawable/chat_right_me"
            android:layout_height="160dp" />
    </RelativeLayout>


</LinearLayout>