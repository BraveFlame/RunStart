<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f1f1"
    tools:context=".friend.friendfragment.GroupFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/my_search_border"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@mipmap/ic_shousu"
                android:focusable="true"/>
            <TextView
                android:id="@+id/helpText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="Search group"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#a0a0a0"/>
            <EditText
                android:id="@+id/searchGroupText"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="Search group"
                android:textSize="18sp"
                android:background="@null">
            </EditText>
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/backIcon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@mipmap/ic_gou"
                android:visibility="visible"
                android:background="#f1f1f1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/recommendedGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Recommended group"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/moreRecommendedGroup"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:text="More"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@null"
                android:drawableRight="@mipmap/ic_gochatting"
                android:gravity="center"/>
        </LinearLayout>
        <com.runstart.friend.adapter.ListViewForScrollView
            android:id="@+id/recommendedGroupListView"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:dividerHeight="2dp"
            android:divider="#f2f1f1">
        </com.runstart.friend.adapter.ListViewForScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/myGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="My group"
                android:textColor="#000000"
                android:textSize="18sp"/>
        </LinearLayout>

        <com.runstart.friend.adapter.ListViewForScrollView
            android:id="@+id/myGroupListView"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:dividerHeight="2dp"
            android:divider="#f2f1f1">
        </com.runstart.friend.adapter.ListViewForScrollView>
        <com.runstart.friend.adapter.ListViewForScrollView
            android:id="@+id/joinedGroupListView"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:dividerHeight="2dp"
            android:divider="#f2f1f1">
        </com.runstart.friend.adapter.ListViewForScrollView>
        <RelativeLayout
            android:id="@+id/zero_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@mipmap/kongzhuangtai"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="I have not joined the group yet"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#b2a2bf"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
