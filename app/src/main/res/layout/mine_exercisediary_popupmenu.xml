<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f0f0"
    android:orientation="vertical">
    <!--全选-->
    <RelativeLayout
        android:id="@+id/mine_exercisediary_popupmenu_rl_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/mine_exercisediary_iv_popup_fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:src="@mipmap/ic_fabu" />

        <TextView
            android:id="@+id/mine_exercisediary_tv_popup_chooseall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mine_exercisediary_iv_popup_fabu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:text="Choose All"
            android:textSize="16sp"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/mine_exercisediary_tv_popup_chooseall"
            android:layout_alignLeft="@+id/mine_exercisediary_tv_popup_chooseall"

            android:background="#e0e0e0" />
    </RelativeLayout>
    <!--反选-->
    <RelativeLayout
        android:id="@+id/mine_exercisediary_popupmenu_rl_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/mine_exercisediary_iv_popup_tuichu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:src="@mipmap/ic_tuichu" />

        <TextView
            android:id="@+id/mine_exercisediary_tv_popup_invertselection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mine_exercisediary_iv_popup_tuichu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:text=" Invert Selection"
            android:textSize="16sp"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/mine_exercisediary_tv_popup_invertselection"
            android:layout_alignLeft="@+id/mine_exercisediary_tv_popup_invertselection"

            android:background="#e0e0e0" />
    </RelativeLayout>
    <!--删除-->
    <RelativeLayout
        android:id="@+id/mine_exercisediary_popupmenu_rl_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mine_exercisediary_iv_popup_xiaoxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:src="@mipmap/ic_xiaoxi" />

        <TextView
            android:id="@+id/mine_exercisediary_tv_popup_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mine_exercisediary_iv_popup_xiaoxi"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:text="Delete"
            android:textSize="16sp"
            />


    </RelativeLayout>
</LinearLayout>